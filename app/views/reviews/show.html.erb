<p id="notice"><%= notice %></p>

<div style=display:none;>
  <p id="reviewId"> <%= @review.id%></p>
</div>

<div ng-app="reviewApp" ng-controller="SingleReviewController">
  <h3>{{review.title}}</h3>

  <p>{{review.score}}</p>
  <p>{{review.content}}</p>

  <h3 ng-click="formVisible = !formVisible">Show comments</h3>
  <div ng-show="formVisible" >
    <%= render 'comment_list'%>
    
    <form ng-submit="submitComment()">
      <input type="text" ng-model="comment.content"></input>
      <input type="submit" class="btn btn-success"/>
    </form>

  </div>
</div>

<%= link_to 'Edit', edit_review_path(@review) %> |
<%= link_to 'Back', reviews_path %>
