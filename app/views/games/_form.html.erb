<div ng-app="gameApp" ng-controller="newGameController">
<form ng-submit="addGame()">
    <input type="text" ng-model="game.name"></input>

    <select ng-model="game.publisher">
        <option ng-repeat="publisher in publishers" value="{{publisher.id}}">{{publisher.name}}</option>
    </select>

    <select ng-model="game.platforms" multiple>
        <option ng-repeat="platform in platforms" value={{platform.id}}>{{platform.title}}</option>
    </select>

    <select ng-model="game.genre">
        <option ng-repeat="genre in genres" value="{{genre.id}}">{{genre.name}}</option>
    </select>

    <button class="btn btn-success" onClick="addGame()">Add</button>
</form>
</div>

