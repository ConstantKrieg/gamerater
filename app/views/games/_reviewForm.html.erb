<%= form_for(@review) do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :score %><br>
    <%= f.number_field :score %>
  </div>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  
  <%= f.hidden_field :game_id, value: @game.id %>

  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
